# diamond blast and obtain top 10 hits

#!/bin/bash
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=1
#SBATCH --cpus-per-task=20
#SBATCH --mem=100gb
#SBATCH -t 10:00:00
#SBATCH --mail-type=ALL
#SBATCH --mail-user=qiuxx221@umn.edu
#SBATCH -o diamondblast_v5.out
#SBATCH -e diamondblast_v5.err
#SBATCH --tmp=300gb

cd /home/hirschc1/qiuxx221/widiv/de_novo/pan_contigs_filtering

module load diamond
diamond blastx --db /home/hirschc1/qiuxx221/db/uniref90.dmnd -q contigs_ID_uniref_search.fasta --outfmt 6 -k 10 -o /home/hirschc1/qiuxx221/widiv/de_novo/pan_contigs_filtering/uniref_blastx/pan_contigs_blastx_v5.out
